<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>

    <body class="crear-editarProducto">

        <%- include('../partials/header') %>

            <main class="crear-editar">

                <h2>Completa los datos de tu nuevo producto</h2>

                <form action="/administrador/crear" method="post" enctype="multipart/form-data">
                    <section class="campos">
                        <div class="titulo">
                            <input type="text" name="Titulo" class="titulo" id="Titulo" placeholder="Titulo">
                            <small>Obligatorio</small>
                        </div>
                        <div class="autor">
                            <input type="text" name="Autor" class="autor" id="Autor" placeholder="Autor">
                            <small>Obligatorio</small>
                        </div>
                        <div class="idioma">
                            <input type="text" name="Idioma" class="idioma" id="Idioma" placeholder="Idioma">
                        </div>
                        <div class="editorial">
<!--                        <input type="text" name="Editorial" class="editorial" id="Editorial" placeholder="Editorial"> -->
                            <select class="editorial" name="Editorial" id="Editorial" aria-label="">
                                <option selected hidden>Selecciona una opcion</option>
                                <% editoriales.forEach(editorial => { %>
                                    <option value="<%= editorial.id %>"><%= editorial.name %></option>
                                <% }) %> 

                            </select>
                        </div>
                        <div class="tapa">
                            <input type="text" name="Tapa" class="Tapa" id="Tapa" placeholder="Tapa">
                        </div>
                        <div class="modelo">
                            <input type="number" name="Modelo" class="modelo" id="Modelo" placeholder="Año de publicación">
                        </div>
                        <div class="categorias">
                            <select class="categoria" name="Categoria" id="" aria-label="">
                                <option selected hidden>Selecciona una opcion</option>

                                <% categories.forEach(categoria => { %>
                                    <option value="<%= categoria.id %>"><%= categoria.name %></option>
                                <% }) %> 
 
<!--                            <option value="Suspenso">Suspenso</option>
                                <option value="Ciencia Ficcion">Ciencia Ficción</option>
                                <option value="No Ficcion">No Ficción</option>
                                <option value="Poesia">Poesia</option>
                                <option value="Educativo">Educativo</option>
                                <option value="Novelas">Novelas</option>
                                <option value="Clasicos">Clásicos</option>
                                <option value="Infantiles">Infantiles</option>  -->

                            </select>
                            <small>Obligatorio</small>
                        </div>
                        <div class="precio">
                            <input type="number" name="Precio" class="precio" id="Precio" placeholder="Precio">
                            <small>Obligatorio</small>
                        </div>
                        <div class="descuento">
                            <input type="number" name="Descuento" class="Descuento" id="descuento" placeholder="Descuento"> 
                            <small>Descuento opcional</small>
                        </div>
                        <div class="stock">
                            <input type="number" name="Stock" class="stock" id="Stock" placeholder="Stock">
                        </div>
                        <div class="subcategoria">
                            <input type="text" name="Subcategoria" class="subcategoria" id="subcategoria" placeholder="Subcategoria (Oferta, Más vendidos)"> 
                        </div>
                    </section>
                    <section class="bottom">
                        <div class="descripcion">
                            <textarea class="" name="Descripcion"
                                placeholder="Por favor inserte la descripcion del producto" id=""></textarea>
                            <small>Obligatorio</small>
                        </div>
                        <div class="archivos">
                            <label for="" class="">Subir imagenes del producto</label>
                            <input class="subirImagen" name="Imagen" type="file" id="" multiple>
                            
                            <small>Obligatorio</small>
                        </div>
                        <div class="boton">
                            <button class="botonCrear" type="submit">Crear Producto</button>
                        </div>

                    </section>
                </form>
            </main>

            <%- include('../partials/footer') %>

    </body>

</html>