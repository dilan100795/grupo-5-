            </div>
            <div class="busqueda">
                <input type="search" placeholder="Buscar por libros, autores y más">
                <button><i class="fab fa-sistrix"></i></button>
            </div>

            <section class="icon">
                <!--logo de login pantallas grandes-->
                <div class="login-icon">
